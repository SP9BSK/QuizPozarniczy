            </intent-filter>
        </activity>

        <!-- PANEL SĘDZIEGO -->
        <activity
            android:name=".JudgeActivity"
            android:exported="false" />

        <!-- QUIZ -->
        <activity
            android:name=".QuizActivity"
            android:exported="false" />

        <!-- TRYB NAUKI -->
        <activity
            android:name=".LearningActivity"
            android:exported="false" />

        <!-- USTAWIENIA -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <!-- EDYCJA PYTAŃ -->
        <activity
            android:name=".EditLocalQuestionsActivity"
            android:exported="false" />

        <!-- REGULAMIN -->
        <activity
            android:name=".RegulaminActivity"
            android:exported="false" />

    </application>

</manifest>
