<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- PODGLĄD PYTANIA -->
        <TextView
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- EDYCJA 1 FRAGMENTU -->
        <EditText
            android:id="@+id/etQuoted1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fragment w cudzysłowie (1)"
            android:visibility="gone" />

        <!-- EDYCJA 2 FRAGMENTU -->
        <EditText
            android:id="@+id/etQuoted2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fragment w cudzysłowie (2)"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/etA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Odpowiedź A" />

        <EditText
            android:id="@+id/etB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Odpowiedź B" />

        <EditText
            android:id="@+id/etC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Odpowiedź C" />

        <RadioGroup
            android:id="@+id/rgCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbA"
                android:text="Poprawna A" />

            <RadioButton
                android:id="@+id/rbB"
                android:text="Poprawna B" />

            <RadioButton
                android:id="@+id/rbC"
                android:text="Poprawna C" />
        </RadioGroup>

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poprzednie" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Następne" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zapisz i wróć" />
    </LinearLayout>
</ScrollView>
