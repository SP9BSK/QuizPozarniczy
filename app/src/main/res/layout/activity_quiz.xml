<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
    android:id="@+id/txtPlayerName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textStyle="bold"
    android:padding="8dp"
    android:text="Zawodnik"/>


    <!-- â± ZEGAR + LICZNIK PYTAÅƒ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- WYPEÅNIACZ â€“ spycha licznik w prawo -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtQuestionCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- â“ PYTANIE -->
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pytanie"
        android:textSize="22sp"
        android:layout_marginTop="24dp" />

    <!-- ðŸ…°ï¸ðŸ…±ï¸ðŸ…² ODPOWIEDZI -->
    <Button
        android:id="@+id/btnA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"
        android:textAllCaps="false"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B"
        android:textAllCaps="false"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C"
        android:textAllCaps="false"
        android:layout_marginTop="12dp" />

    <!-- ðŸ” POKAÅ» POPRAWNE ODPOWIEDZI -->
    <Button
        android:id="@+id/btnShowCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PokaÅ¼ dobre odpowiedzi"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

    <!-- â­ NASTÄ˜PNY ZAWODNIK / WYNIKI -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NastÄ™pny zawodnik"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>
